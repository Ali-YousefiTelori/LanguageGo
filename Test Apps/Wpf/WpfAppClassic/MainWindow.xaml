<Window x:Class="WpfAppClassic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppClassic"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="50">
            <TextBlock Name="tblock" Text="Select something from combobox"  Margin="5"/>
            <ComboBox Name="cbo" />
            <Button Name="btn" Content="Click me" Click="Btn_Click" Margin="30" HorizontalAlignment="Center" Padding="10" />
            <TextBlock Name="tblock_result" FontSize="70" Text="-----" HorizontalAlignment="Center" />
        </StackPanel>
    </Grid>
</Window>
